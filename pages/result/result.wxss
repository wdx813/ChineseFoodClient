    background-size: 100% 100%;
    background-repeat: no-repeat;
    display: flex;
    flex-direction: column;
    align-items: center;
}

.box-res {
    width: 293px;
    height: 247px;
     /* background-image: url('https://chinese-food-1256000358.cos.ap-shanghai.myqcloud.com/client-img/backimg-data.png'); 
