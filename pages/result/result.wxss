    height: 60rpx;
    background-color: #fee987;
    border-radius: 15rpx;
    position: relative;
    top: -70rpx;
    display: flex;
    align-items: center;
    justify-content: center;
    font-size: 32rpx;
}

.info {
    position: relative;
    top: -45rpx;
}


.ana {
    width: 260px;
    display: flex;
    flex-direction: column;
    justify-content: center;
    align-items: center;
    background-color: #ffdfa2;
    border: 2px solid #ffdfa2;
    border-radius: 10rpx;
}

.ana-title {
    font-size: 32rpx;
    display: flex;
    justify-content: center;
}

.ana-content {
    height: 100rpx;
    position: relative;
    top: 10rpx;
}

.btn {
    position: relative;
    top: 150rpx;
    display: flex;
    justify-content: space-around;
    width: 100%;
}

.btn-circle {
    background-image: url('https://chinese-food-1256000358.cos.ap-shanghai.myqcloud.com/client-img/btn-cirlcle.png');
