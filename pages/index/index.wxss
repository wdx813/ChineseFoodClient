/**index.wxss**/

.contain {
  width: 100%;
  height: 100%;
}

.province-scroll {
  width: 100%;
  height: 90%;
}

.province-item {
  width: 95%;
  height: 100rpx;
  border-bottom: 1px solid;
  border-bottom-color: #ddd;
  border-bottom-width: 50%;
  display: flex;
  align-items: center;
  margin-left: 20rpx;
}

.province-text {
  margin-left: 200rpx;
}

.food-contain {
  width: 100%;
  height: 90%;
  /* opacity: 0.3; */
  position: absolute;
  /* background-color: black; */
  top: 0rpx;
  left: 100%;
  display: flex;
  justify-content: flex-end;
}

.opacity-area {
  width: 20%;
  height: 100%;
  background-color: black;
  opacity: 0.3;
}

.food-scroll {
  width: 80%;
  height: 100%;
  background-color: white;
  opacity: 1;
}

.food-item {
  height: 200rpx;
  width: 100%;
  border-bottom: 1px solid;
  border-bottom-color: #ddd;
  border-bottom-width: 50%;
}

.food-img {
  width: 180rpx;
  height: 180rpx;
  border-radius: 14rpx;
  position: relative;
  top: 10rpx;
  left: 20rpx;
}

.food-name {
  position: relative;
  bottom: 120rpx;
  left: 50rpx;
}
